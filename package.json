{
  "name": "powertoys-color-picker-tray",
  "version": "1.0.0",
  "description": "Windows tray app to quickly open PowerToys Color Picker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "tray",
    "powertoys",
    "color-picker",
    "windows"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^39.2.7",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "canvas": "^3.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.powertoys.colorpicker.tray",
    "productName": "PowerToys Color Picker Tray",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "icon.png"
    ]
  }
}
